<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/xx"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/noti"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Đồng bộ dữ liệu"
            android:textColor="#000" />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/xx"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:text="Wellcome to Food "
        android:textColor="#FFF">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Đăng nhập với"
            android:textColor="#000"
            android:textSize="17dp" />

        <Button
            android:id="@+id/login_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroud_facebook_login"
            android:drawableLeft="@drawable/facebook_logo"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="Đăng nhập với facebook"
            android:textColor="#FFF"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10dp" />

        <Button
            android:id="@+id/login_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroud_google_login"
            android:drawableLeft="@drawable/google_logo"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="Đăng nhập với google"
            android:textColor="#FFF"
            android:textSize="15dp" />

    </LinearLayout>


</RelativeLayout>